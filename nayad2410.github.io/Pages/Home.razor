@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Home - Be Healthier with Nabaa</PageTitle>

<div class="container mt-5">
    <h1><i class="fas fa-leaf"></i> Welcome to Be Healthier with Nabaa</h1>
    <p>At Be Healthier Nabaa, we’re dedicated to helping you live your healthiest life. Our personalized nutrition programs are crafted by experts and powered by modern technology, ensuring that whether you want to lose weight, build muscle, or embrace a healthier lifestyle, we have the perfect solution tailored to your needs.</p>

    <button class="btn btn-primary" @onclick="NavigateToPrograms">
        <i class="fas fa-dumbbell"></i> Explore Our Programs
    </button>
    <button class="btn btn-secondary" @onclick="NavigateToContact">
        <i class="fas fa-envelope"></i> Contact Us
    </button>
</div>

@code {
    private void NavigateToPrograms()
    {
        NavigationManager.NavigateTo("/services");
    }

    private void NavigateToContact()
    {
        NavigationManager.NavigateTo("/contact");
    }
}
